# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /cadastro                   controllers.CadastroController.index()
POST    /cadastro                   controllers.CadastroController.save()
GET     /selecaoguia                controllers.SelecaoGuiaController.index()
GET     /guiarapido                 controllers.GuiaRapidoController.index()
POST    /guiarapido                 controllers.GuiaRapidoController.onPost()
GET     /pacotesacessiveis          controllers.PacotesAcessiveisController.exibirPacotesAcessiveis(valor: String, locOrigem: String, locDestino: String)
POST    /pacotesacessiveis          controllers.PacotesAcessiveisController.customizarPacote()
GET     /customizarpedido           controllers.CustomizarPedidoController.indexCustomizar(nome_pacote: String, locOrigem: String, locDestino: String, valorDesejado: String)
POST    /customizarpedido           controllers.CustomizarPedidoController.onPostCustomizar()
GET     /resumopedido               controllers.ResumoPedidoController.indexResumo(locOrigem: String, locDestino: String, valorDesejado: String)
POST    /resumopedido               controllers.ResumoPedidoController.onPostResumo()


