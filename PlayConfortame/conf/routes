# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /cadastro                   controllers.CadastroController.index()
POST    /cadastro                   controllers.CadastroController.save()
GET     /products                   controllers.ProductsController.list
GET     /products/new               controllers.ProductsController.showBlank()
GET     /products/:id               controllers.ProductsController.show(id: Integer)
POST    /products                   controllers.ProductsController.save()
